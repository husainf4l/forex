/* TradingView-inspired Apple-style Design for Gold Trading Platform */

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    /* Color Palette */
    --primary-bg: #0d1421;
    --secondary-bg: #131722;
    --tertiary-bg: #1e222d;
    --card-bg: #161a25;
    --hover-bg: #1f2328;
    
    /* Text Colors */
    --text-primary: #d1d4dc;
    --text-secondary: #8691a3;
    --text-muted: #5e6673;
    
    /* Accent Colors */
    --gold: #f7931a;
    --gold-light: #ffb84d;
    --green: #26a69a;
    --red: #ef5350;
    --blue: #2196f3;
    
    /* Border & Dividers */
    --border-color: #2a2e39;
    --divider: #1e222d;
    
    /* Shadows */
    --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.12);
    --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.15);
    --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.3);
    
    /* Typography */
    --font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --font-mono: 'SF Mono', Monaco, 'Cascadia Code', monospace;
    
    /* Layout */
    --sidebar-width: 280px;
    --nav-height: 56px;
    --status-height: 32px;
    --border-radius: 8px;
    --border-radius-sm: 4px;
}

body {
    font-family: var(--font-family);
    background: var(--primary-bg);
    color: var(--text-primary);
    line-height: 1.5;
    font-size: 14px;
    overflow: hidden;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.trading-platform {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background: var(--primary-bg);
}

/* ===== TOP NAVIGATION ===== */
.top-nav {
    height: var(--nav-height);
    background: var(--secondary-bg);
    border-bottom: 1px solid var(--border-color);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
    position: relative;
    z-index: 100;
}

.nav-left {
    display: flex;
    align-items: center;
    gap: 32px;
}

.logo {
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: 700;
    font-size: 18px;
    color: var(--gold);
}

.logo i {
    font-size: 24px;
}

.nav-menu {
    display: flex;
    gap: 24px;
}

.nav-item {
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 500;
    padding: 8px 12px;
    border-radius: var(--border-radius-sm);
    transition: all 0.2s ease;
    position: relative;
}

.nav-item:hover {
    color: var(--text-primary);
    background: var(--hover-bg);
}

.nav-item.active {
    color: var(--gold);
    background: var(--hover-bg);
}

.nav-item.active::after {
    content: '';
    position: absolute;
    bottom: -17px;
    left: 50%;
    transform: translateX(-50%);
    width: 20px;
    height: 2px;
    background: var(--gold);
    border-radius: 1px;
}

.nav-right {
    display: flex;
    align-items: center;
    gap: 20px;
}

.connection-indicator {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 6px 12px;
    background: var(--tertiary-bg);
    border-radius: var(--border-radius);
    font-size: 12px;
    font-weight: 500;
}

.status-dot,
#connection-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--green);
    animation: pulse 2s infinite;
}

.status-dot.disconnected,
#connection-dot.disconnected {
    background: var(--red);
    animation: none;
}

@keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.5; }
    100% { opacity: 1; }
}

.user-menu {
    color: var(--text-secondary);
    font-size: 24px;
    cursor: pointer;
    transition: color 0.2s ease;
}

.user-menu:hover {
    color: var(--text-primary);
}

/* ===== MAIN TRADING CONTAINER ===== */
.trading-container {
    flex: 1;
    display: flex;
    overflow: hidden;
}

/* ===== LEFT SIDEBAR ===== */
.left-sidebar {
    width: var(--sidebar-width);
    background: var(--secondary-bg);
    border-right: 1px solid var(--border-color);
    display: flex;
    flex-direction: column;
    overflow-y: auto;
}

.sidebar-header {
    padding: 16px 20px;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.sidebar-header h3 {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-primary);
}

.collapse-btn {
    background: none;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    padding: 4px;
    border-radius: var(--border-radius-sm);
    transition: all 0.2s ease;
}

.collapse-btn:hover {
    color: var(--text-primary);
    background: var(--hover-bg);
}

/* Price Summary */
.price-summary {
    padding: 20px;
    border-bottom: 1px solid var(--border-color);
}

.asset-info {
    margin-bottom: 16px;
}

.asset-title {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 18px;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 4px;
}

.gold-icon {
    color: var(--gold);
}

.asset-subtitle {
    color: var(--text-secondary);
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.price-display {
    margin-bottom: 12px;
}

.current-price,
#main-price {
    font-family: var(--font-mono);
    font-size: 28px;
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1.2;
}

.price-change,
#main-change {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-top: 4px;
}

.change-amount {
    font-family: var(--font-mono);
    font-weight: 600;
    font-size: 14px;
}

.change-percent {
    font-size: 12px;
    opacity: 0.8;
}

.price-change.positive,
#main-change.positive {
    color: var(--green);
}

.price-change.negative,
#main-change.negative {
    color: var(--red);
}

/* Market Details */
.market-details {
    padding: 16px 20px;
    border-bottom: 1px solid var(--border-color);
}

.detail-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 0;
}

.detail-row .label {
    color: var(--text-secondary);
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.detail-row .value {
    font-family: var(--font-mono);
    font-weight: 600;
    color: var(--text-primary);
}

.detail-row .value.high {
    color: var(--green);
}

.detail-row .value.low {
    color: var(--red);
}

/* Market Status */
.market-status {
    padding: 16px 20px;
}

.status-indicator {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;
}

.status-indicator .status-dot {
    width: 6px;
    height: 6px;
}

.status-indicator .status-dot.active {
    background: var(--green);
}

.last-update {
    color: var(--text-muted);
    font-size: 11px;
}

/* ===== MAIN CHART AREA ===== */
.chart-area {
    flex: 1;
    background: var(--primary-bg);
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.chart-header {
    padding: 16px 20px;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    background: var(--secondary-bg);
}

.chart-title h2 {
    font-size: 20px;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 4px;
}

.chart-subtitle {
    color: var(--text-secondary);
    font-size: 12px;
}

.chart-controls {
    display: flex;
    gap: 16px;
    align-items: center;
}

.timeframe-selector {
    display: flex;
    background: var(--tertiary-bg);
    border-radius: var(--border-radius);
    padding: 2px;
}

.timeframe-btn {
    background: none;
    border: none;
    color: var(--text-secondary);
    padding: 6px 12px;
    border-radius: var(--border-radius-sm);
    font-size: 12px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
}

.timeframe-btn:hover {
    color: var(--text-primary);
}

.timeframe-btn.active {
    background: var(--gold);
    color: #000;
}

.chart-tools {
    display: flex;
    gap: 4px;
}

.tool-btn {
    background: var(--tertiary-bg);
    border: none;
    color: var(--text-secondary);
    width: 32px;
    height: 32px;
    border-radius: var(--border-radius-sm);
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.tool-btn:hover {
    color: var(--text-primary);
    background: var(--hover-bg);
}

/* Chart Container */
.chart-container {
    flex: 1;
    position: relative;
    margin: 16px;
    background: var(--card-bg);
    border-radius: var(--border-radius);
    border: 1px solid var(--border-color);
    overflow: hidden;
}

.chart-container canvas {
    width: 100% !important;
    height: 100% !important;
}

.chart-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
}

/* Chart Footer */
.chart-footer {
    padding: 12px 20px;
    border-top: 1px solid var(--border-color);
    background: var(--secondary-bg);
}

.chart-info {
    display: flex;
    gap: 24px;
    align-items: center;
}

.info-item {
    display: flex;
    align-items: center;
    gap: 6px;
    color: var(--text-secondary);
    font-size: 12px;
}

.info-item i {
    font-size: 10px;
}

/* ===== RIGHT SIDEBAR ===== */
.right-sidebar {
    width: var(--sidebar-width);
    background: var(--secondary-bg);
    border-left: 1px solid var(--border-color);
    display: flex;
    flex-direction: column;
    overflow-y: auto;
}

/* Trading Panel */
.trading-panel {
    padding: 20px;
    border-bottom: 1px solid var(--border-color);
}

.trade-tabs {
    display: flex;
    background: var(--tertiary-bg);
    border-radius: var(--border-radius);
    padding: 2px;
    margin-bottom: 20px;
}

.trade-tab {
    flex: 1;
    background: none;
    border: none;
    color: var(--text-secondary);
    padding: 8px 16px;
    border-radius: var(--border-radius-sm);
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
}

.trade-tab.active {
    background: var(--green);
    color: #000;
}

.trade-form {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.input-group {
    display: flex;
    flex-direction: column;
    gap: 6px;
}

.input-group label {
    color: var(--text-secondary);
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.trade-input {
    background: var(--tertiary-bg);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-sm);
    padding: 10px 12px;
    color: var(--text-primary);
    font-family: var(--font-mono);
    font-size: 14px;
    transition: border-color 0.2s ease;
}

.trade-input:focus {
    outline: none;
    border-color: var(--gold);
}

.trade-input:read-only {
    cursor: not-allowed;
    opacity: 0.7;
}

.trade-summary {
    background: var(--tertiary-bg);
    border-radius: var(--border-radius);
    padding: 12px;
}

.summary-row {
    display: flex;
    justify-content: space-between;
    padding: 4px 0;
    font-size: 12px;
}

.summary-row:first-child {
    font-weight: 600;
    color: var(--text-primary);
}

.summary-row:last-child {
    color: var(--text-secondary);
}

.trade-button {
    background: var(--green);
    border: none;
    border-radius: var(--border-radius);
    padding: 12px 16px;
    color: #000;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
}

.trade-button:hover {
    background: #2ab7aa;
    transform: translateY(-1px);
}

.trade-button:active {
    transform: translateY(0);
}

.buy-button {
    background: var(--green);
}

.sell-button {
    background: var(--red);
    color: white;
}

/* Recent Activity */
.recent-activity {
    padding: 20px;
}

.recent-activity h4 {
    font-size: 14px;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 16px;
}

.activity-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.activity-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    background: var(--tertiary-bg);
    border-radius: var(--border-radius);
    transition: background 0.2s ease;
}

.activity-item:hover {
    background: var(--hover-bg);
}

.activity-icon {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
}

.activity-icon.buy {
    background: rgba(38, 166, 154, 0.2);
    color: var(--green);
}

.activity-icon.sell {
    background: rgba(239, 83, 80, 0.2);
    color: var(--red);
}

.activity-details {
    flex: 1;
}

.activity-title {
    font-size: 13px;
    font-weight: 500;
    color: var(--text-primary);
}

.activity-subtitle {
    font-size: 12px;
    color: var(--text-secondary);
    font-family: var(--font-mono);
}

.activity-time {
    font-size: 11px;
    color: var(--text-muted);
}

/* ===== STATUS BAR ===== */
.status-bar {
    height: var(--status-height);
    background: var(--secondary-bg);
    border-top: 1px solid var(--border-color);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
    font-size: 11px;
    color: var(--text-secondary);
}

.status-left,
.status-center,
.status-right {
    display: flex;
    gap: 16px;
}

.status-item {
    display: flex;
    align-items: center;
    gap: 4px;
}

.status-item i {
    font-size: 10px;
}

/* ===== RESPONSIVE DESIGN ===== */
@media (max-width: 1200px) {
    :root {
        --sidebar-width: 240px;
    }
}

@media (max-width: 768px) {
    .trading-container {
        flex-direction: column;
    }
    
    .left-sidebar,
    .right-sidebar {
        width: 100%;
        max-height: 200px;
    }
    
    .nav-menu {
        display: none;
    }
    
    .chart-controls {
        flex-direction: column;
        gap: 8px;
    }
    
    .status-bar {
        flex-direction: column;
        height: auto;
        padding: 8px 20px;
    }
    
    .status-left,
    .status-center,
    .status-right {
        justify-content: center;
    }
}

/* ===== ANIMATIONS ===== */
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}

@keyframes slideInLeft {
    from { transform: translateX(-100%); }
    to { transform: translateX(0); }
}

@keyframes slideInRight {
    from { transform: translateX(100%); }
    to { transform: translateX(0); }
}

.trading-platform {
    animation: fadeIn 0.3s ease-out;
}

.left-sidebar {
    animation: slideInLeft 0.3s ease-out;
}

.right-sidebar {
    animation: slideInRight 0.3s ease-out;
}

/* ===== SCROLLBAR STYLING ===== */
::-webkit-scrollbar {
    width: 6px;
    height: 6px;
}

::-webkit-scrollbar-track {
    background: var(--secondary-bg);
}

::-webkit-scrollbar-thumb {
    background: var(--border-color);
    border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--text-muted);
}

/* ===== CHART SPECIFIC STYLES ===== */
.chart-container {
    background: linear-gradient(145deg, var(--card-bg) 0%, var(--tertiary-bg) 100%);
}

/* Price update animation */
.price-display.updated {
    animation: priceFlash 0.3s ease;
}

@keyframes priceFlash {
    0% { transform: scale(1); }
    50% { transform: scale(1.02); }
    100% { transform: scale(1); }
}

/* Connection status colors */
#connection-status.connected {
    color: var(--green);
}

#connection-status.disconnected {
    color: var(--red);
}

#connection-status.connecting {
    color: var(--gold);
}

.logo {
    display: flex;
    align-items: center;
    gap: 12px;
}

.gold-icon {
    font-size: 32px;
    color: var(--gold-primary);
    text-shadow: 0 2px 4px rgba(255, 215, 0, 0.3);
}

.logo h1 {
    font-size: 32px;
    font-weight: 700;
    color: var(--text-primary);
    letter-spacing: -0.5px;
}

.status {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: var(--text-secondary);
}

.live-indicator {
    width: 8px;
    height: 8px;
    background: var(--green);
    border-radius: 50%;
    margin-left: 8px;
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0% {
        transform: scale(1);
        opacity: 1;
    }
    50% {
        transform: scale(1.2);
        opacity: 0.7;
    }
    100% {
        transform: scale(1);
        opacity: 1;
    }
}

/* Main Content */
.main-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 24px;
}

/* Cards */
.price-card,
.chart-card,
.info-card {
    background: var(--card-background);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    transition: all 0.3s ease;
    border: 1px solid var(--border-color);
}

.price-card:hover,
.chart-card:hover,
.info-card:hover {
    box-shadow: var(--shadow-hover);
    transform: translateY(-2px);
}

/* Price Card */
.price-card {
    padding: 32px;
}

.price-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
}

.price-header h2 {
    font-size: 20px;
    font-weight: 600;
    color: var(--text-primary);
}

#last-update {
    font-size: 12px;
    color: var(--text-secondary);
    background: #f5f5f7;
    padding: 4px 8px;
    border-radius: 6px;
}

.price-display {
    text-align: center;
    margin-bottom: 32px;
}

#current-price {
    display: block;
    font-size: 48px;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 8px;
    letter-spacing: -1px;
}

.price-change {
    display: flex;
    justify-content: center;
    gap: 8px;
    font-size: 16px;
    font-weight: 500;
}

.price-change.positive {
    color: var(--green);
}

.price-change.negative {
    color: var(--red);
}

.price-change-percent.positive {
    color: var(--green);
}

.price-change-percent.negative {
    color: var(--red);
}

.price-details {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
}

.detail-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 16px;
    background: #f5f5f7;
    border-radius: 8px;
}

.detail-item .label {
    font-size: 14px;
    color: var(--text-secondary);
    font-weight: 500;
}

.detail-item span:last-child {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-primary);
}

/* Chart Card */
.chart-card {
    padding: 24px;
    min-height: 400px;
}

.chart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.chart-header h3 {
    font-size: 18px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
}

.chart-controls {
    display: flex;
    gap: 8px;
}

.chart-btn {
    padding: 6px 12px;
    border: 1px solid var(--border-color);
    border-radius: 6px;
    background: white;
    color: var(--text-primary);
    font-size: 12px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
}

.chart-btn:hover {
    background: var(--background);
    border-color: var(--gold-primary);
}

.chart-btn:active {
    transform: scale(0.95);
}

.chart-container {
    position: relative;
    height: 300px;
    width: 100%;
}

.chart-container canvas {
    border-radius: 8px;
}

/* Info Card */
.info-card {
    padding: 24px;
}

.info-card h3 {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 16px;
    color: var(--text-primary);
}

#market-info {
    color: var(--text-secondary);
    font-size: 14px;
    line-height: 1.5;
}

/* Footer */
.footer {
    margin-top: 40px;
    text-align: center;
}

.refresh-btn {
    background: var(--gold-primary);
    color: white;
    border: none;
    border-radius: var(--radius);
    padding: 12px 24px;
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
    box-shadow: 0 2px 10px rgba(255, 215, 0, 0.3);
}

.refresh-btn:hover {
    background: var(--gold-secondary);
    transform: translateY(-1px);
    box-shadow: 0 4px 15px rgba(255, 215, 0, 0.4);
}

.refresh-btn:active {
    transform: translateY(0);
}

.refresh-icon {
    font-size: 18px;
    transition: transform 0.3s ease;
}

.refresh-btn:hover .refresh-icon {
    transform: rotate(45deg);
}

/* Connection Status Styles */
.connection-status {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    color: var(--text-secondary);
}

#ws-status {
    padding: 4px 8px;
    border-radius: 4px;
    font-weight: 500;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

#ws-status.connected {
    background: var(--green);
    color: white;
}

#ws-status.connecting {
    background: var(--gold-primary);
    color: white;
}

#ws-status.disconnected,
#ws-status.connection-error,
#ws-status.connection-failed {
    background: var(--red);
    color: white;
}

#ws-status.reconnecting {
    background: var(--gold-secondary);
    color: white;
}

/* Responsive Design */
@media (max-width: 768px) {
    .container {
        padding: 16px;
    }
    
    .header {
        margin-bottom: 24px;
    }
    
    .logo h1 {
        font-size: 28px;
    }
    
    .gold-icon {
        font-size: 28px;
    }
    
    #current-price {
        font-size: 36px;
    }
    
    .price-details {
        grid-template-columns: 1fr;
    }
    
    .price-card {
        padding: 24px;
    }
    
    .chart-container {
        height: 250px;
    }
    
    .chart-header {
        flex-direction: column;
        gap: 12px;
        align-items: flex-start;
    }
    
    .chart-controls {
        align-self: flex-end;
    }
}

/* Loading States */
.loading {
    opacity: 0.6;
    pointer-events: none;
}

.loading::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 20px;
    height: 20px;
    margin: -10px 0 0 -10px;
    border: 2px solid var(--border-color);
    border-top: 2px solid var(--gold-primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Error States */
.error {
    color: var(--red);
    background: rgba(255, 59, 48, 0.1);
    border: 1px solid rgba(255, 59, 48, 0.2);
    border-radius: 8px;
    padding: 12px 16px;
    font-size: 14px;
}

/* Success States */
.success {
    color: var(--green);
    background: rgba(48, 209, 88, 0.1);
    border: 1px solid rgba(48, 209, 88, 0.2);
    border-radius: 8px;
    padding: 12px 16px;
    font-size: 14px;
}
